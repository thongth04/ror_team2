<div class="container">
  <p class="display-3 text-center mt-4 mb-4">ADMIN DASHBOARD</p>

  <div id="dashboard">
    <div class="card m-3 pt-2 border border-4 border-primary" style="height:180px;">
      <%= link_to users_path, class:"text-decoration-none" do %>
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h1><i class="fas fa-users text-primary display-3"></i></h1>
          <h2 class="card-title text-primary fst-italic">Quản lý người dùng</h2>
        </div>
      <% end %>
    </div>

    <div class="card m-3 pt-2 border border-4 border-warning" style="height:180px;">
      <%= link_to products_path, class:"text-decoration-none" do %>
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h1><i class="fas fa-cubes text-warning display-3"></i></h1>
          <h2 class="card-title text-warning fst-italic">Quản lý sản phẩm</h2>
        </div>
      <% end %>
    </div>

    <div class="card m-3 pt-2 border border-4 border-danger" style="height:180px;">
      <%= link_to orders_path, class:"text-decoration-none" do %>
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h1><i class="fas fa-file-invoice-dollar text-danger display-3"></i></h1>
          <h2 class="card-title text-danger fst-italic">Quản lý đơn hàng</h2>
        </div>
      <% end %>
    </div>

    <div class="card m-3 pt-2 border border-4 border-success" style="height:180px;">
      <%= link_to root_path, class:"text-decoration-none" do %>
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h1><i class="fas fa-warehouse text-success display-3"></i></h1>
          <h2 class="card-title text-success fst-italic">Quản lý kho</h2>
        </div>
      <% end %>
    </div>

  </div>
</div>