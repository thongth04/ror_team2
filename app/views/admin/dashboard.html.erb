<div class="container">
  <p class="display-3 text-center mt-4 mb-4">ADMIN DASHBOARD</p>

  <div id="dashboard">
    <div class="card m-3 border border-4 border-primary" style="height:180px;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h1><i class="fas fa-users text-primary display-3"></i></h1>
        <h2 class="card-title">
          <%= link_to "Quản lý người dùng", users_path, class:"text-decoration-none text-primary fst-italic" %>
        </h2>
      </div>
    </div>
    <div class="card m-3 border border-4 border-warning" style="height:180px;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h1><i class="fas fa-cubes text-warning display-3"></i></h1>
        <h2 class="card-title">
          <%= link_to "Quản lý sản phẩm", products_path, class:"text-decoration-none text-warning fst-italic" %>
        </h2>
      </div>
    </div>
    <div class="card m-3 border border-4 border-danger" style="height:180px;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h1><i class="fas fa-file-invoice-dollar text-danger display-3"></i></h1>
        <h2 class="card-title">
          <%= link_to "Quản lý đơn hàng", orders_path, class:"text-decoration-none text-danger fst-italic" %>
        </h2>
      </div>
    </div>
    <div class="card m-3 border border-4 border-success" style="height:180px;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <h1><i class="fas fa-warehouse text-success display-3"></i></h1>
        <h2 class="card-title">
          <%= link_to "Quản lý kho", root_path, class:"text-decoration-none text-success fst-italic" %>
        </h2>
      </div>
    </div>
  </div>

</div>