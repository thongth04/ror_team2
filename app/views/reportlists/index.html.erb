<div class="container mb-5">
  <h1 class=" text-center ">Báo Cáo Cuối Ngày</h1>
  <%= render 'filter_form' %>
  <% if @orders.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Mã đơn hàng</th>
          <th scope="col">Ngày mua</th>
          <th scope="col">Sản phẩm</th>
          <th scope="col">Tổng tiền</th>
        </tr>
      </thead>
      <tbody>
         <tr>
          <th scope="col" class ="text-info">Tổng HĐ: <%= @orders.count%></th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col" class ="text-info"><%= number_to_currency(@totalreport, unit:"", precision: 0, delimiter:'.') %></th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <th scope="row" class="ps-4 py-4"><%= link_to "HD000#{order.id}", order_path(order), class:"text-decoration-none" %></th>
            <td class="py-4"><%= order.created_at.strftime("%d-%m-%Y") %></td>
            <td class="py-4" style="width:40%"><%= order.order_items.count %> </td>
            <td class="py-4"><%= number_to_currency(order.total, unit:"", precision: 0, delimiter:'.') %></td>
          </tr>
        <% end %>
      </tbody>  
    </table>
     
    <div class="apple_pagination">
      <%# <%= will_paginate @orders, :container => false %> 
    </div>
  <% else %>
      <p class="fs-4 ms-4 mt-4">Oh! Bạn chưa đặt đơn hàng nào cả. Mua hàng ngay nào!</p>
  <% end %>
</div>
<%= javascript_pack_tag 'date', 'data-aturbolinks-track': 'reload' %>


