<div class="container d-flex justify-content-center">
  <div class="card mt-5" style="width: 50rem;">
    <div class="card-header text-center">
      <h2>Forgot your password?</h2>
    </div>
    <div class="card-body px-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your recovery email", class: "form-control p-2" %>
        </div>

        <div class="actions mt-4 mb-2">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100 p-2" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none" %> |
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
