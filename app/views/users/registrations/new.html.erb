<div class="container d-flex justify-content-center">
  <div class="card mt-5" style="width: 40rem;">
    <div class="card-header text-center">
      <h2>Sign up</h2>
    </div>
    <div class="card-body px-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <% f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control p-2" %>
        </div>

        <div class="form-group">
          <% f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control p-2" %>
        </div>

        <div class="form-group">
          <% f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm password", class: "form-control p-2" %>
        </div>

        <div class="actions mt-4 mb-2">
          <%= f.submit "Create account", class: "btn btn-primary w-100 p-2" %>
        </div>

        <div class="text-center">
          <%= link_to "Having account? Login", new_session_path(resource_name), class: "text-decoration-none" %><br />
          <%= link_to "Cancel", root_path, class: "text-decoration-none" %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>