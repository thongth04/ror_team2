<div class="container d-flex justify-content-center mb-5">
  <div class="card mt-5" style="width: 40rem;">
    <div class="card-header text-center">
      <h3>ĐĂNG NHẬP</h3>
    </div>
    <div class="card-body px-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email / Số điện thoại", class: "form-control p-2" %>
        </div>

        <div class="form-group">
          <%f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Mật khẩu", class: "form-control p-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="my-4 d-flex justify-content-between">
            <div class="checkbox-field">
              <%= f.check_box :remember_me %>
              <%= f.label "Nhớ tài khoản" %>
            </div>
            <%= link_to "Quên mật khẩu", new_password_path(resource_name), class: "text-decoration-none text-danger" %>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "ĐĂNG NHẬP", class: "btn btn-danger w-100 py-2" %>
        </div>
      <% end %>
      
      <div class="text-center my-3">
        <span>Bạn chưa có tài khoản? </span>
        <%= link_to "Đăng ký ngay", new_registration_path(resource_name), class: "text-decoration-none text-danger fw-bold" %><br />
      </div>
    </div>
  </div>
</div>
