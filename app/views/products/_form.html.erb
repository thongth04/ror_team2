<div class="d-flex justify-content-center mb-4">
  <div class="card mt-5" style="width: 35rem;">
    <div class="card-header text-center">
      <h3><%= yield :card_title %></h3>
    </div>
    <div class="card-body px-4">
      <%= form_with model: @product do |f| %>
        <%= render "shared/error_messages", obj: @product %>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= f.label :Title %>:</b>
          <%= f.text_field :title, autofocus: true, class: "form-control p-2 w-75", placeholder: "Tên Sản phẩm" %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= f.label :Description %>:</b> 
          <%= f.text_area :description, class: "form-control p-2 w-75", placeholder: "Description" %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= f.label :category %>:</b> 
          <%= f.select :product_type, [["Drinks", 'drink'], ["Foods", 'food'], ["Others", 'others']], {}, { class: "p-2 w-75" } %>
        </div>
        
        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= f.label :price %>:</b> 
          <%= f.number_field :price, min: 0, step: 1, class: "form-control p-2 w-75", placeholder: "Price (VND)" %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= f.label :quantity %>:</b> 
          <%= f.number_field :quantity, in: 0..100, step: 1, class: "form-control p-2 w-75", placeholder: "Quantity" %>
        </div>
        
        <div class="field">
        <%= f.label :image_url %>
        <%= f.text_field :image_url %>
      </div>

        <div class="actions mt-4 mb-2">
          <%= f.submit "Save product", class: "btn btn-success w-100 p-2" %>
        </div>
        <div class="text-center"><%= link_to "Cancel", products_path, class:"text-decoration-none text-success"%></div>
      <% end %>
    </div>
  </div>
</div>