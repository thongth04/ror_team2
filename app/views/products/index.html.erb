<div class="pb-5">
  <h1 class="text-center mt-4 mb-5">Quản lý sản phẩm</h1>

  <% if @products.count > 0 %>
    <% @products.each do |product| %>
      <%= render 'product', product: product %>
    <% end %>
    <div class="apple_pagination">
      <%= will_paginate @products, :container => false %>
    </div>
  <% else %>
    <p class="fs-4 ms-4 mt-4">Opp!!! Cannot find any products</p>
  <% end %>

  <div class="float-end me-3 mb-3">
    <%= link_to "New Product", new_product_path, class: "fs-6 btn btn-outline-secondary" %>
  </div>
</div>