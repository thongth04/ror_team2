<div class="card mx-auto mb-3" style="max-width: 1000px; min-height: 200px">
<div class="row g-0">
<img class="card-img-top" src="<%= product.image_url %>" alt="image.jpg" style:"max-width: 200px;">

    <div class="col-md-6">
        <div class="card-body"
            <p class="card-text"><b>Title: &ensp;</b><%= product.title %></p>
            <p class="card-text"><b>Type: &ensp;</b><%= product.product_type %></p>
            <p class="card-text"><b>Price: &ensp;</b><%= number_to_currency(product.price, unit:"", precision: 0, delimiter:',') %> VND</p>
            <p class="card-text"><b>Description: &ensp;</b><%= product.description %></p>
            <p class="card-text"><b>Quantity: &ensp;</b><%= product.quantity %></p>
        </div>

     <div class="col-md-3">
        <div class="card-body float-end">
          <%= link_to "Show", product_path(product), class: "btn btn-outline-primary" %>
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-warning" %>
          <%= link_to "Delete", product_path(product),
                          method: :delete,
                          data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        </div>
      </div>
     </div>
     </div>
</div>