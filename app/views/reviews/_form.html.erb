<%= form_with model: [ @product, @product.reviews.build ] do |form| %>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <h6><b><%= current_user.username%></b></h6>
      </div>
    </div>

    <div class="col-sm-8">
      <div class="form-group mb-3">
        <%= form.label "Mức độ hài lòng của bạn:", class:"me-4"%>
        <%= form.radio_button :rating, 1 %>
        <%= form.label "1", class:"me-4"%>
        <%= form.radio_button :rating, 2 %>
        <%= form.label "2", class:"me-4"%>
        <%= form.radio_button :rating, 3 %>
        <%= form.label "3", class:"me-4"%>
        <%= form.radio_button :rating, 4 %>
        <%= form.label "4", class:"me-4"%>
        <%= form.radio_button :rating, 5%>
        <%= form.label "5", class:"me-4"%>
      </div>

      <div class="form-group mb-2">
        <%= form.text_area :content, placeholder:"Nêu cảm nhận của bạn về sản phẩm", class:"p-3 w-75", style:"height:100px" %>
      </div>

      <div>
        <%= form.submit "Lưu đánh giá", class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>