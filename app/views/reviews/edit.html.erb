<div class="d-flex justify-content-center mb-4">
  <div class="card mt-5" style="width: 35rem;">
    <div class="card-header text-center">
      <h3>Edit your review</h3>
    </div>
    <div class="card-body px-4">
      <%= form_with model: [ @product, @review ] do |form| %>
        <%= render "shared/error_messages", obj: @review %>

        <div class="form-group mb-3">
          <h6><b><%= current_user.username%></b></h6>
        </div>

        <div class="form-group mb-2">
          <%= form.label "Mức độ hài lòng của bạn:", class:"me-4"%>
          <%= form.radio_button :rating, 1 %>
          <%= form.label "1", class:"me-4"%>
          <%= form.radio_button :rating, 2 %>
          <%= form.label "2", class:"me-4"%>
          <%= form.radio_button :rating, 3 %>
          <%= form.label "3", class:"me-4"%>
          <%= form.radio_button :rating, 4 %>
          <%= form.label "4", class:"me-4"%>
          <%= form.radio_button :rating, 5%>
          <%= form.label "5", class:"me-4"%>
        </div>

        <div class="form-group mb-2">
          <%= form.text_area :content, class:"w-100", style:"height:100px" %>
        </div>

        <div class="actions mt-4 mb-2">
          <%= form.submit "Lưu đánh giá", class:"btn btn-primary w-100 p-2" %>
        </div>

        <div class="text-center"><%= link_to "Cancel", product_details_path(@product), class:"text-decoration-none text-primary"%></div>
      <% end %>
    </div>
  </div>
</div>
