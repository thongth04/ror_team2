<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>The following errors prevented the <%= obj.model_name.human.downcase %> from being saved</h2>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>