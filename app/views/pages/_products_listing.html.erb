<div class="container mb-5 mt-5" id="products-listing">
  <div class="pd-5">

    <div class="strike-under">
      <h1 class="text-center mb-4"><span><%= yield :page_title %></span></h1>
    </div>

    <% if products.count == 0 %>
      <p class="fs-4 ms-4 mt-4">Cannot find any products</p>
    <% else %>
      <div class="apple_pagination">
        <%= will_paginate products, :container => false %>
      </div>

      <div class="grid-list my-3">
        <% products.each do |product| %>
          <%= render 'product', product: product %>
        <% end %>
      </div>

      <div class="apple_pagination">
        <%= will_paginate products, :container => false %>
      </div>
    <% end %>

  </div>
</div>